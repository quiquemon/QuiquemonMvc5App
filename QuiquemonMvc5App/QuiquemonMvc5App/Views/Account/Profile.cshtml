@{ ViewBag.Title = "Mi Perfil"; }
@model QuiquemonMvc5App.Models.ViewModels.Account.ProfileViewModel

<h1>@ViewBag.Title</h1>
<p>Puedes actualizar tu información personal aquí.</p>
<a href="/Account" class="btn btn-warning">
	<span class="glyphicon glyphicon-arrow-left"></span>
	Regresar al dashboard
</a>
<hr>
<div class="row">
	@Html.AntiForgeryToken()
	<div class="col-sm-3"></div>
	<div class="col-sm-6" align="center">
		<div class="panel panel-info">
			<div class="panel-heading">
				<b>Tu Logo</b>
			</div>
			<div class="panel-body">
				<div id="logoBody" class="row">
					<div class="col-sm-6 col-xs-6 text-center">
						<span id="logoPreview" class="@ViewBag.User.Logo.Name" style="font-size:10rem; margin-top:10px"></span>
					</div>
					<div class="col-sm-6 col-xs-6">
						<div class="form-group">
							@Html.LabelFor(model => model.Logo)
							@Html.DropDownListFor(model => model.Logo, Model.Logos, new { @class = "form-control" })
						</div>
						<button id="btnChangeLogo" class="btn btn-info btn-block">Cambiar Logo</button>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="col-sm-3"></div>
</div>
<div class="row">
	<div class="col-sm-3"></div>
	<div class="col-sm-6" align="center">
		<div class="panel panel-primary">
			<div class="panel-heading">
				<b>Tu Información Personal</b>
			</div>
			<div id="personalInfoBody" class="panel-body">
				<div class="form-group">
					@Html.LabelFor(model => model.Name)
					<div class="input-group">
						@Html.TextBoxFor(model => model.Name, new { @class = "form-control", value = Model.Name })
						<span class="input-group-addon">
							<span class="glyphicon glyphicon-pencil"></span>
						</span>
					</div>
				</div>
				<div class="form-group">
					@Html.LabelFor(model => model.Lastname)
					<div class="input-group">
						@Html.TextBoxFor(model => model.Lastname, new { @class = "form-control", value = Model.Lastname })
						<span class="input-group-addon">
							<span class="glyphicon glyphicon-pencil"></span>
						</span>
					</div>
				</div>
				<div class="form-group">
					@Html.LabelFor(model => model.Birthday)
					<div class="input-group date">
						@Html.TextBoxFor(model => model.Birthday, new { @class = "form-control", @readonly = ""})
						<span class="input-group-addon">
							<span class="glyphicon glyphicon-calendar" style="cursor: pointer"></span>
						</span>
					</div>
				</div>
				<div class="form-group">
					@Html.LabelFor(model => model.Email)
					<div class="input-group">
						@Html.TextBoxFor(model => model.Email, new { @class = "form-control", value = Model.Email })
						<span class="input-group-addon">
							<span class="glyphicon glyphicon-envelope"></span>
						</span>
					</div>
				</div>
				<div class="form-group">
					@Html.LabelFor(model => model.Newsletter)
					@Html.DropDownListFor(model => model.Newsletter, new List<SelectListItem> {
					new SelectListItem { Text = "Sí", Value = "True", Selected = (Model.Newsletter == "True") },
					new SelectListItem { Text = "No", Value = "False", Selected = (Model.Newsletter == "False") },
				}, new { @class = "form-control" })
				</div>
				<br>
				<button id="btnEditPersonalInfo" class="btn btn-primary btn-block">Actualizar Información Personal</button>
			</div>
		</div>
	</div>
	<div class="col-sm-3"></div>
</div>
<div class="row">
	<div class="col-sm-3"></div>
	<div class="col-sm-6" align="center">
		<div class="panel panel-warning">
			<div class="panel-heading">
				<b>Tu Contraseña</b>
			</div>
			<div class="panel-body">

			</div>
		</div>
	</div>
	<div class="col-sm-3"></div>
</div>
<script>var birthday = "@(Model.Birthday?.ToString("yyyy-MM-dd"))";</script>
@Scripts.Render("~/bundles/profile")